<p id="notice"><%= notice %></p>

<div class="pull-left">
	<p>
	  <strong>Title:</strong>
	  <%= @topic.title %>
	</p>

	<p>
	  <strong>User:</strong>
	  <%= @topic.user.email %> (<%= @topic.user_id %>)
	</p>
</div>

<div class="pull-right">
<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %> | 
<%= link_to 'New Posts', new_topic_post_path(@topic) %>
</div>

<div class="clearfix"></div>

<hr>
<h3>Listing Posts</h3>
<hr>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Destroy', topic_post_path(@topic, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
